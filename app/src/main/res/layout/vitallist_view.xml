<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/item_view_background"
    android:elevation="10sp"
    android:layout_marginTop="10sp"
    android:id="@+id/vitalListLinearLayout">

    <TextView
        android:id="@+id/vitalDateReadings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="Date"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/font_light"/>

    <TextView
        android:id="@+id/vitalOxygenReadings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="23.3"
        android:text="Sys"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/font_light"/>

    <TextView
        android:id="@+id/vitalTempReadings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="23.3"
        android:text="Dia"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/font_light"/>

    <TextView
        android:id="@+id/vitalRRateReadings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="23.3"
        android:text="Pulse"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/font_light"/>

</LinearLayout>