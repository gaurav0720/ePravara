<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15sp"
    android:weightSum="100"
    android:background="@drawable/item_view_background"
    android:elevation="10sp"
    android:layout_marginTop="10sp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showFacilityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="20sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/showFacilityType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/showFacilityPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityContactPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

        <TextView
            android:id="@+id/showFacilityNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="18sp"
            android:fontFamily="@font/font_light"
            android:textColor="@color/black"
            android:layout_marginTop="3sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/updateFacility"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                android:background="@drawable/update_delete_btn_back"
                />

            <ImageView
                android:id="@+id/deleteFacility"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="8dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/update_delete_btn_back"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>