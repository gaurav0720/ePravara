<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DashboardFragment"
    android:background="@drawable/back">

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        tools:ignore="SmallSp"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp"
            android:gravity="center"
            android:background="@drawable/rectangle_second">

            <RelativeLayout
                android:id="@+id/layoutOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/idtxtwelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome,"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/font_light"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/txtShowWelcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/idtxtwelcome"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font_light"
                    android:layout_marginStart="5dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height="1sp"
                tools:ignore="SmallSp"
                android:background="@color/colorAccent"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="All in one 'Medical Data Storage' application"
                android:textColor="@color/black"
                android:fontFamily="@font/font_light"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >

                <RelativeLayout
                    android:id="@+id/relativeOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp"
                    android:background="@drawable/card_back_three">

                    <LinearLayout
                        android:id="@+id/layoutTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageOne"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:padding="5dp"
                            android:src="@drawable/info"
                            android:layout_gravity="center_vertical"
                            />

                        <LinearLayout
                            android:id="@+id/linearOne"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginStart="15sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fill Medical Information"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/font_light"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Here you can fill all your medical details."
                                android:textSize="15sp"
                                android:textColor="#808080"
                                android:fontFamily="@font/font_light"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_fill_info"
                        android:layout_below="@id/layoutTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fill Information"
                        android:fontFamily="@font/font_light"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/btn_login_reg_back"
                        android:focusable="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >

                <RelativeLayout
                    android:id="@+id/relativeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp"
                    android:background="@drawable/card_back_three"
                    >

                    <LinearLayout
                        android:id="@+id/layoutThree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Free Counselling"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/font_light"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Here you can get a free medical\ncounsellings from our experts."
                                android:textSize="15sp"
                                android:textColor="#808080"
                                android:fontFamily="@font/font_light"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageTwo"
                            android:layout_width="0dp"
                            android:layout_height="80sp"
                            android:padding="5dp"
                            android:src="@drawable/counselling"
                            android:layout_weight="50"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_get_graphic"
                        android:layout_below="@id/layoutThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get Counselling"
                        android:fontFamily="@font/font_light"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/btn_login_reg_back"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >

                <RelativeLayout
                    android:id="@+id/relativeThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp"
                    android:background="@drawable/card_back_three">

                    <LinearLayout
                        android:id="@+id/layoutFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageThree"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/pro"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            />

                        <LinearLayout
                            android:id="@+id/linearThree"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginStart="15sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Get Detailed Profile"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/font_light"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Here you can get your detailed and managed profile profile."
                                android:textSize="15sp"
                                android:textColor="#808080"
                                android:fontFamily="@font/font_light"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_show_profile"
                        android:layout_below="@id/layoutFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="See My Profile"
                        android:fontFamily="@font/font_light"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/btn_login_reg_back"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>