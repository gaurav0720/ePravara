<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp"
    android:background="@drawable/item_view_background"
    android:elevation="10sp"
    android:layout_marginTop="10sp"
    android:id="@+id/labresultsLinearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Results:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

        <TextView
            android:id="@+id/showLabResultsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis Date"
            android:layout_toEndOf="@+id/id1"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating Physician:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

        <TextView
            android:id="@+id/showLabResultsPhysician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis Date"
            android:layout_toEndOf="@+id/id2"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Name:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

        <TextView
            android:id="@+id/showLabResultsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis Date"
            android:layout_toEndOf="@+id/id3"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result Value:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

        <TextView
            android:id="@+id/showLabResultsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis Date"
            android:layout_toEndOf="@+id/id4"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result Units:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

        <TextView
            android:id="@+id/showLabResultsUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis Date"
            android:layout_toEndOf="@+id/id5"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font_light"
            android:gravity="start"/>

    </RelativeLayout>

</LinearLayout>