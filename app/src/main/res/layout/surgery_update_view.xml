<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Surgery Details"
        android:padding="15sp"
        android:textSize="22sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:fontFamily="@font/font_light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/updateSurgeryName">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Surgery Name"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/font_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/updateSurgeryReason"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reason for Surgery"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/font_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/updateSurgeryResults"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Results of Surgery"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/font_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/updateSurgeryAftercare"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Aftercare required for Surgery"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/font_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/updateSurgeryNotes"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/font_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordering Physician"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_light"
                android:textColor="#808080"/>

            <Spinner
                android:id="@+id/updateSurgeryOrderingPhysicianSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Performing Surgeon"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_light"
                android:textColor="#808080"/>

            <Spinner
                android:id="@+id/updateSurgeryPerformingSurgeonSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anesthesiologist"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_light"
                android:textColor="#808080"/>

            <Spinner
                android:id="@+id/updateSurgeryAnesthesiologistSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedure Facility"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_light"
                android:textColor="#808080"/>

            <Spinner
                android:id="@+id/updateSurgeryProcedureFacilitySpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <Button
                android:id="@+id/updateSurgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Surgery"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/font_light"
                android:textSize="18sp"
                android:background="@drawable/btn_login_reg_back"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>